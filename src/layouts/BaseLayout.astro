---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Beaver Habit Tracker - Simple habit tracking without goals',
  description = 'A simple habit tracking app without goals. Track your habits with visual streaks, no pressure, just progress.'
} = Astro.props;

const paddleToken = import.meta.env.PADDLE_CLIENT_SIDE_TOKEN;
const paddleSandbox = (import.meta.env.PADDLE_SANDBOX ?? 'false');
const isDev = import.meta.env.DEV;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content="habit tracking, tracking habit, habit tracker, habit tracker app, daily habits, streaks" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/landing/statics/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
      <link rel="canonical" href="https://beaverhabits.com" />
      <meta name="robots" content="index, follow" />

      <!-- Open Graph -->
      <meta property="og:type" content="website" />
      <meta property="og:title" content={title} />
      <meta property="og:description" content={description} />
      <meta property="og:url" content="https://beaverhabits.com" />
      <meta property="og:image" content="/landing/statics/screenshot-1.jpg" />

      <!-- Twitter -->
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:title" content={title} />
      <meta name="twitter:description" content={description} />
      <meta name="twitter:image" content="/landing/statics/screenshot-1.jpg" />

      <!-- Structured data - Organization -->
      <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Beaver Habit Tracker",
          "url": "https://beaverhabits.com",
          "logo": "https://beaverhabits.com/landing/statics/favicon.svg",
          "sameAs": [
            "https://github.com/daya0576/beaverhabits",
            "https://twitter.com/beaverhabits",
            "https://www.youtube.com/@beaverhabits"
          ],
          "founder": {
            "@type": "Person",
            "name": "Henry Zhu",
            "jobTitle": "Developer",
            "url": "https://github.com/daya0576"
          }
        }
      </script>

      <!-- Structured data - WebSite with SearchAction -->
      <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "WebSite",
          "url": "https://beaverhabits.com",
          "name": "Beaver Habit Tracker",
          "description": "A simple habit tracking app without goals. Track your habits with visual streaks, no pressure, just progress.",
          "potentialAction": {
            "@type": "SearchAction",
            "target": "https://beaverhabits.com/search?q={search_term_string}",
            "query-input": "required name=search_term_string"
          }
        }
      </script>

      <!-- Structured data - SoftwareApplication -->
      <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "SoftwareApplication",
          "name": "Beaver Habit Tracker",
          "description": "A simple habit tracking app without goals. Track your habits with visual streaks, no pressure, just progress.",
          "url": "https://beaverhabits.com",
          "applicationCategory": "LifestyleApplication",
          "operatingSystem": "Web, iOS, Android",
          "offers": {
            "@type": "AggregateOffer",
            "priceCurrency": "USD",
            "lowPrice": "0",
            "highPrice": "9.90",
            "offerCount": "2"
          },
          "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.8",
            "ratingCount": "150",
            "bestRating": "5"
          },
          "author": {
            "@type": "Person",
            "name": "Henry Zhu",
            "url": "https://github.com/daya0576"
          },
          "screenshot": [
            "https://beaverhabits.com/landing/statics/screenshot-1.jpg",
            "https://beaverhabits.com/landing/statics/screenshot-2.jpg",
            "https://beaverhabits.com/landing/statics/screenshot-3.jpg"
          ],
          "featureList": [
            "Habit tracking without goals",
            "Visual streak tracking",
            "Daily backup",
            "Export & Import",
            "RESTful API",
            "Self-hosted option"
          ]
        }
      </script>

      <!-- Structured data - FAQPage -->
      <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "What is Beaver Habit Tracker?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Beaver Habit Tracker is a simple habit tracking app without goals. It helps you track your daily habits with visual streaks, focusing on progress rather than pressure."
              }
            },
            {
              "@type": "Question",
              "name": "Is Beaver Habit Tracker free?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Yes, Beaver Habit Tracker offers a free plan with key features. Pro version with unlimited habits and advanced features is available for $9.90 lifetime license."
              }
            },
            {
              "@type": "Question",
              "name": "Can I self-host Beaver Habit Tracker?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Yes, Beaver Habit Tracker is open-source and can be self-hosted using Docker. Visit our GitHub repository for installation instructions."
              }
            }
          ]
        }
      </script>
      
      <!-- Paddle Checkout -->
      <script src="https://cdn.paddle.com/paddle/v2/paddle.js"></script>
      <script define:vars={{ paddleToken, paddleSandbox, isDev }}>
        // Debug: Print environment variables (dev only)
        if (isDev) {
          console.log('[Paddle Config]', {
            token: paddleToken,
            sandbox: paddleSandbox,
            tokenPrefix: paddleToken?.substring(0, 5),
            origin: window.location.origin
          });
        }

        // Wait for Paddle to load without fixed 3s delay
        (function() {
          const initPaddle = () => {
            if (isDev) console.log('[Paddle] Initializing...');
            Paddle.Initialize({ 
              token: paddleToken
            });
            if (String(paddleSandbox).toLowerCase() === 'true') {
              Paddle.Environment.set('sandbox');
              if (isDev) console.log('[Paddle] Sandbox mode enabled');
            }
            if (isDev) console.log('[Paddle] Initialized successfully');
          };

          if (typeof Paddle !== 'undefined') {
            initPaddle();
            return;
          }

          let attempts = 0;
          const maxAttempts = 50; // ~5s at 100ms
          const intervalId = setInterval(() => {
            if (typeof Paddle === 'undefined') {
              attempts += 1;
              if (attempts >= maxAttempts) {
                clearInterval(intervalId);
                if (isDev) console.warn('[Paddle] Failed to load within 5s');
              }
              return;
            }

            clearInterval(intervalId);
            initPaddle();
          }, 100);
        })();
      </script>

      <!-- Umami Analytics (Production only) -->
      {!isDev && (
        <script defer src="https://cloud.umami.is/script.js" data-website-id="d3e618a1-866a-4625-b59a-9c8f576c7420"></script>
      )}
  </head>
  <body>
    <slot />
  </body>
</html>
