---
import AnimatedScreenshots from './AnimatedScreenshots.tsx';
---

<section class="pt-36 pb-36 px-4 bg-[rgb(var(--color-background))]">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-23 ">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-8 leading-snug tracking-tight">
        Simple <span class="text-blue-400">habit tracking</span> app<br />
        <span class="text-blue-400">without 'goals'</span>
      </h1>

      <h2 class="text-base md:text-lg text-gray-400 mb-10 max-w-3xl mx-auto leading-relaxed">
        Open-source and privacy-first, simple and aesthetic, fully extensible with REST API, import/export tools. Help you track daily or periodic habits with notes and categories.
      </h2>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="https://beaverhabits.com/register" class="bg-blue-400 hover:bg-blue-500 text-white text-base font-medium px-6 py-2 rounded-md transition-colors inline-block">
          Get Started
        </a>
        <a href="https://beaverhabits.com/demo" class="border border-gray-500 hover:border-gray-400 text-gray-300 text-base font-medium px-6 py-2 rounded-md transition-colors inline-flex items-center gap-2">
          Open Demo
          <svg width="1em" height="1em" viewBox="0 0 24 24" stroke="transparent" stroke-width="2" role="img">
            <path d="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z" fill="currentColor"></path>
          </svg>
        </a>
      </div>
    </div>

    <div class="mt-15">
      <AnimatedScreenshots client:load />
    </div>
  </div>
</section>
