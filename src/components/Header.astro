import GitHubStarButton from './GitHubStarButton';
import { fetchGitHubStars } from '../utils/fetchGitHubStars';

const stars = await fetchGitHubStars();
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[rgb(var(--color-background))]/80 backdrop-blur-sm border-b border-gray-700/50">
  <div class="container mx-auto px-4 h-14 sm:h-16 flex items-center justify-between">
    <a href="https://beaverhabits.com/gui" class="text-sm sm:text-xl font-semibold hover:text-gray-300 transition-colors">BeaverHabits</a>

    <nav class="flex items-center gap-4">
      <a href="https://beaverhabits.com/pricing" class="text-sm sm:text-base text-gray-300 hover:text-white transition-colors" target="_blank" rel="noopener">Pricing</a>
      <a href="https://beaverhabits.com/register" class="text-sm sm:text-base text-gray-300 hover:text-white transition-colors">Account</a>
      <a href="https://github.com/daya0576/beaverhabits/wiki" target="_blank" rel="noopener" class="text-sm sm:text-base text-gray-300 hover:text-white transition-colors">Docs</a>
      
      <!-- GitHub Stars - Hidden on mobile -->
      <GitHubStarButton stars={stars} />
    </nav>
  </div>
</header>
